  {
    "name": "Tipografia",
    "settings": [
      {
        "type": "header",
        "content": "Cabeçalhos"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Fonte",
        "info": "Selecione uma fonte do sistema ou do Google Fonts"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Tamanho da fonte",
        "default": 100
      },
      {
        "type": "header",
        "content": "Corpo do texto"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
