<!-- Cart Drawer (Bottom Sheet exclusivo do carrinho) -->
<div id="CartDrawerSheet" class="cart-drawer-sheet" aria-hidden="true" role="dialog" aria-labelledby="cart-drawer-title">
  <div class="cart-drawer-sheet__handle" aria-hidden="true">
    <div class="cart-drawer-sheet__drag"></div>
  </div>

  <header class="cart-drawer-sheet__header">
    <h2 id="cart-drawer-title">Sacola</h2>
    <button type="button" class="cart-drawer-sheet__close js-cart-drawer-close" aria-label="Fechar carrinho">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 6l12 12M6 18L18 6"/>
      </svg>
    </button>
  </header>

  <div class="cart-drawer-sheet__content">
    {% if cart.item_count > 0 %}
      <ul class="cart-drawer-sheet__items">
        {% for item in cart.items %}
          <li class="cart-drawer-sheet__item" data-key="{{ item.key }}">
            <div class="cart-drawer-sheet__thumb">
              <img src="{{ item.image | img_url: '100x' }}" alt="{{ item.title }}">
            </div>
            <div class="cart-drawer-sheet__meta">
              <div class="cart-drawer-sheet__title">{{ item.product.title }}</div>
              <div class="cart-drawer-sheet__variant">{{ item.variant.title }}</div>
              <div class="cart-drawer-sheet__qty">Qtd: {{ item.quantity }}</div>
            </div>
            <div class="cart-drawer-sheet__price">{{ item.final_line_price | money }}</div>
          </li>
        {% endfor %}
      </ul>

      <div class="cart-drawer-sheet__footer">
        <div class="cart-drawer-sheet__subtotal">
          <span>Subtotal</span>
          <strong>{{ cart.total_price | money }}</strong>
        </div>
        <div class="cart-drawer-sheet__actions">
          <a href="{{ routes.cart_url }}" class="btn btn--secondary">Ver sacola</a>
          <a href="/checkout" class="btn btn--primary">Finalizar compra</a>
        </div>
      </div>
    {% else %}
      <div class="cart-drawer-sheet__empty">
        <h3>Você ainda não tem produtos adicionados à sacola.</h3>
        
        <div class="cart-drawer-sheet__icon">
          <!-- Utilizando o mesmo ícone do header -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <!-- Contador posicionado bem junto da sacola, um pouco à direita -->
          <span class="cart-drawer-sheet__counter">{{ cart.item_count | default: 0 }}</span>
        </div>
      
        <p>Escolha tudo que o seu pet precisa e adicione à sacola para comprar.</p>
        <button class="btn btn--primary js-cart-drawer-close">Entendi</button>
      </div>
    {% endif %}
  </div>
</div>

<!-- Backdrop -->
<div id="CartDrawerBackdrop" class="cart-drawer-backdrop" aria-hidden="true"></div>

