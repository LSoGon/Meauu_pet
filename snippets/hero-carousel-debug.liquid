<!-- Debug Hero Carousel -->
<div style="background: #ff0000; color: white; padding: 20px; margin: 20px 0;">
  <h3>Debug Hero Carousel</h3>
  <p>Número de slides: {{ section.blocks.size }}</p>
  <p>Altura configurada: {{ section.settings.height }}</p>
  <p>Autoplay: {{ section.settings.autoplay }}</p>
  
  {% for block in section.blocks %}
    <div style="background: #333; padding: 10px; margin: 10px 0;">
      <p>Slide {{ forloop.index }}:</p>
      <p>- Tem imagem? {% if block.settings.image != blank %}SIM{% else %}NÃO{% endif %}</p>
      <p>- Título: {{ block.settings.heading }}</p>
      <p>- Subtítulo: {{ block.settings.subheading }}</p>
    </div>
  {% endfor %}
</div>