{% comment %}
  Seção de Categorias em Destaque
  Exibe as categorias principais do pet shop
{% endcomment %}

<section class="featured-categories">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    
    <div class="categories-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="category-card">
          {% if block.settings.image %}
            <div class="category-image">
              <img src="{{ block.settings.image | img_url: '150x150' }}"
                   alt="{{ block.settings.title }}"
                   loading="lazy">
            </div>
          {% endif %}
          <h3 class="category-title">{{ block.settings.title }}</h3>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .featured-categories {
    padding: 60px 0;
    background-color: #f8f9fa;
  }

  .container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    text-align: center;
    font-size: 32px;
    margin-bottom: 40px;
    color: #333;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
  }

  .category-card {
    text-decoration: none;
    color: #333;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-5px);
  }

  .category-image {
    width: 150px;
    height: 150px;
    margin: 0 auto 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: white;
    border-radius: 15px;
    padding: 20px;
    margin-bottom: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .category-card:hover .category-image {
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
  }

  .category-image img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .category-title {
    font-size: 14px;
    font-weight: 500;
    text-align: center;
  }
</style>

