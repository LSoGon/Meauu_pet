<!-- sections/category-carousel.liquid -->
{% comment %}
  Seção de Categorias em Layout Horizontal com Scroll
{% endcomment %}

{%- assign collection_handle = section.settings.collection -%}
{%- assign collection = collections[collection_handle] -%}

<div class="category-carousel-section page-width" data-section-id="{{ section.id }}" data-section-type="category-carousel">
  <div class="section-header">
    <h2 class="section-header__title">
      {{ section.settings.title | escape }}
    </h2>
  </div>

  <div class="category-container">
    <div class="category-track">
      {% for block in section.blocks %}
        <div class="category-item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="category-card">
            <div class="category-card__image-wrapper">
              <!-- Círculo de fundo -->
              <div class="category-card__circle"></div>
              <!-- Imagem sobreposta -->
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '200x' }}"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  class="category-card__image">
              {% else %}
                <div class="category-card__placeholder">
                  {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
            <p class="category-card__title">{{ block.settings.title | escape }}</p>
            {% if block.settings.subtitle != blank %}
              <p class="category-card__subtitle">{{ block.settings.subtitle | escape }}</p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.category-carousel-section {
  padding: 0;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
  padding: 20px;
}

.section-header__title {
  font-size: clamp(18px, 2.5vw, 24px);
  font-weight: 300;
  margin: 0;
  color: #333;
}

/* Container principal - similar ao mobile-menu-container do header */
.category-container {
  padding: 7px 15px;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* Track dos itens - similar ao site-nav do header */
.category-track {
  display: flex;
  gap: clamp(20px, 3vw, 30px);
  white-space: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  padding-bottom: 10px; /* Espaço para scrollbar se necessário */
}

/* Item individual */
.category-item {
  flex: 0 0 auto;
  display: inline-block;
  scroll-snap-align: start;
}

.category-card {
  display: block;
  text-align: center;
  text-decoration: none;
  transition: transform 0.3s ease;
  width: 100%;
  white-space: normal; /* Permite quebra de linha nos textos */
}

.category-card:hover {
  transform: translateY(-5px);
}

.category-card__image-wrapper {
  width: clamp(70px, 11vw, 150px);
  height: clamp(70px, 11vw, 150px);
  margin: 0 auto 12px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Círculo de fundo */
.category-card__circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #f5f5f5;
  z-index: 1;
}

/* Imagem sobreposta mantendo proporções originais */
.category-card__image {
  position: relative;
  z-index: 2;
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  border-radius: 0;
}

.category-card__placeholder {
  position: relative;
  z-index: 2;
  width: 80%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f0f0f0;
}

.category-card__title {
  font-weight: 200;
  color: #333;
  margin: 0 0 4px;
  font-size: clamp(13px, 2.2vw, 16px);
  line-height: 1.3;
  word-wrap: break-word;
  padding-top: 7px;
  max-width: clamp(70px, 11vw, 150px);
}

.category-card__subtitle {
  color: #666;
  margin: 0;
  font-size: clamp(9px, 1.4vw, 13px);
  line-height: 1.2;
  word-wrap: break-word;
  max-width: clamp(70px, 11vw, 150px);
}

/* Scroll snap para melhor UX */
.category-container {
  scroll-snap-type: x mandatory;
}

.category-item {
  scroll-snap-align: start;
}

/* Hover effects */
.category-card__title:hover,
.category-card__subtitle:hover {
  color: #efa31d;
  transition: color 0.3s ease;
}

.category-card__title,
.category-card__subtitle {
  transition: color 0.3s ease;
}

/* Responsividade */
@media screen and (max-width: 480px) {
  .category-container {
    padding: 7px 0; /* aumenta ambos os lados */
  }
  
  .category-track {
    gap: 30px;
  }
  
  .category-card__image-wrapper {
    width: clamp(60px, 15vw, 80px);
    height: clamp(60px, 15vw, 80px);
    margin-bottom: 8px;
  }
  
  .category-card__title {
    font-size: clamp(12px, 2.9vw, 15px);
    line-height: 1.2;
    min-height: 2.4em;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding-top: 4px;
    max-width: clamp(60px, 15vw, 80px);
  }
  
  .category-card__subtitle {
    font-size: clamp(8px, 2vw, 10px);
    line-height: 1.1;
    min-height: 1.1em;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-width: clamp(60px, 15vw, 80px);
  }
}

@media screen and (min-width: 481px) and (max-width: 768px) {
  .category-container {
    padding: 7px 20px;
  }
  
  .category-track {
    gap: 12px;
  }
  
  .category-card__image-wrapper {
    width: clamp(80px, 12vw, 120px);
    height: clamp(80px, 12vw, 120px);
    margin-bottom: 10px;
  }
  
  .category-card__title {
    font-size: clamp(12px, 2vw, 14px);
    line-height: 1.2;
    min-height: 2.4em;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding-top: 6px;
    max-width: clamp(80px, 12vw, 120px);
  }
  
  .category-card__subtitle {
    font-size: clamp(10px, 1.8vw, 12px);
    line-height: 1.2;
    min-height: 1.2em;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-width: clamp(80px, 12vw, 120px);
  }
}

@media screen and (min-width: 769px) and (max-width: 1024px) {
  .category-container {
    padding: 7px 30px;
    align-items: center

  }
}

@media screen and (min-width: 1025px) {
  .category-container {
    padding: 7px 40px;
  }
}

/* Estilização da scrollbar (webkit) */
.category-container::-webkit-scrollbar {
  height: 6px;
}

.category-container::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3px;
}

.category-container::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3px;
}

.category-container::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}

/* Para Firefox */
.category-container {
  scrollbar-width: thin;
  scrollbar-color: #c1c1c1 #f1f1f1;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const carousel = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!carousel) return;

  const container = carousel.querySelector('.category-container');
  const track = carousel.querySelector('.category-track');
  
  // Scroll suave com touch
  let isScrolling = false;
  let scrollTimeout;
  
  container.addEventListener('scroll', function() {
    isScrolling = true;
    
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(function() {
      isScrolling = false;
    }, 66);
  }, { passive: true });

  // Touch/swipe melhorado
  let startX = 0;
  let scrollLeft = 0;
  let isDown = false;

  container.addEventListener('mousedown', function(e) {
    isDown = true;
    container.style.cursor = 'grabbing';
    startX = e.pageX - container.offsetLeft;
    scrollLeft = container.scrollLeft;
  });

  container.addEventListener('mouseleave', function() {
    isDown = false;
    container.style.cursor = 'grab';
  });

  container.addEventListener('mouseup', function() {
    isDown = false;
    container.style.cursor = 'grab';
  });

  container.addEventListener('mousemove', function(e) {
    if (!isDown) return;
    e.preventDefault();
    const x = e.pageX - container.offsetLeft;
    const walk = (x - startX) * 2;
    container.scrollLeft = scrollLeft - walk;
  });

  // Adiciona cursor grab
  container.style.cursor = 'grab';
});
</script>

