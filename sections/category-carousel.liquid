<!-- sections/category-carousel.liquid -->
{% comment %}
  Seção de Categorias em Layout Horizontal com Scroll
{% endcomment %}

{%- assign collection_handle = section.settings.collection -%}
{%- assign collection = collections[collection_handle] -%}

<div class="category-carousel-section page-width" data-section-id="{{ section.id }}" data-section-type="category-carousel">
  <div class="section-header">
    <h2 class="section-header__title">
      {{ section.settings.title | escape }}
    </h2>
  </div>

  <div class="category-container" style="padding-left: 20px;">
    <div class="category-track">
      {% for block in section.blocks %}
        <div class="category-item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="category-card">
            <div class="category-card__image-wrapper">
              <!-- Círculo de fundo -->
              <div class="category-card__circle"></div>
              <!-- Imagem sobreposta -->
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '200x' }}"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  class="category-card__image">
              {% else %}
                <div class="category-card__placeholder">
                  {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
            </div>
            <p class="category-card__title">{{ block.settings.title | escape }}</p>
            {% if block.settings.subtitle != blank %}
              <p class="category-card__subtitle">{{ block.settings.subtitle | escape }}</p>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.category-carousel-section {
  padding: 0;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 20px 0 0 20px;
}

.section-header__title {
  font-size: clamp(18px, 2.5vw, 24px);
  font-weight: 600;
  margin: 0;
  /* CORRIGIDO: Usando variável do tema ao invés de valor fixo */
  color: {{ settings.color_body_text }};
}

/* Container principal - similar ao mobile-menu-container do header */
.category-container {
  padding: 7px 15px;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

/* Track dos itens - similar ao site-nav do header */
.category-track {
  display: flex;
  gap: clamp(11px, 2.2vw, 20px);
  white-space: nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  padding-bottom: 10px; /* Espaço para scrollbar se necessário */
}

/* Item individual */
.category-item {
  flex: 0 0 auto;
  display: inline-block;
  scroll-snap-align: start;
}

.category-card {
  display: block;
  text-align: center;
  text-decoration: none;
  transition: transform 0.3s ease;
  width: 100%;
  white-space: normal; /* Permite quebra de linha nos textos */
}

.category-card:hover {
  transform: translateY(-5px);
}

/* Container da imagem - CORRIGIDO */
.category-card__image-wrapper {
  width: clamp(77px, 11vw, 165px);
  height: clamp(77px, 11vw, 165px);
  margin: 0 auto 12px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Círculo de fundo - MANTIDO */
.category-card__circle {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid #EFEFEF;
  background: {{ settings.color_small_image_bg | default: '#f5f5f5' }};
  z-index: 1;
}

/* Imagem - CORRIGIDO para centralização perfeita */
.category-card__image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  max-width: 80%; /* Reduzido para dar mais espaço dentro do círculo */
  max-height: 80%; /* Reduzido para dar mais espaço dentro do círculo */
  width: auto;
  height: auto;
  object-fit: contain;
  border-radius: 0;
}

/* Placeholder - CORRIGIDO */
.category-card__placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 80%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f0f0f0;
}

/* Título - CORRIGIDO para centralização com o círculo */
.category-card__title {
  font-weight: 400;
  color: {{ settings.color_body_text }};
  margin: 0 0 4px;
  font-size: clamp(14px, 2.5vw, 18px);
  line-height: 1.3;
  word-wrap: break-word;
  padding-top: 7px;
  /* MUDANÇA PRINCIPAL: centralizar com a largura do círculo */
  width: clamp(77px, 11vw, 165px);
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}

/* Subtítulo - CORRIGIDO */
.category-card__subtitle {
  color: {{ settings.color_body_text | color_modify: 'alpha', 0.7 }};
  margin: 0;
  font-size: clamp(11px, 1.4vw, 15px);
  line-height: 1.2;
  word-wrap: break-word;
  /* MUDANÇA PRINCIPAL: centralizar com a largura do círculo */
  width: clamp(77px, 11vw, 165px);
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}

/* Scroll snap para melhor UX */
.category-container {
  scroll-snap-type: x mandatory;
}

.category-item {
  scroll-snap-align: start;
}

/* Hover effects */
.category-card__title:hover,
.category-card__subtitle:hover {
  /* CORRIGIDO: Usando cor do botão do tema para hover */
  color: {{ settings.color_button }};
  transition: color 0.3s ease;
}

.category-card__title,
.category-card__subtitle {
  transition: color 0.3s ease;
}

/* Responsividade */
@media screen and (max-width: 480px) {
  /* Remove o margin-left do primeiro card */
  .category-track .category-card:first-child {
    margin-left: 10px;
    /* Forçar centralização do conteúdo */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  /* Aplicar em todos os cards para consistência */
  .category-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .section-header {
    margin-bottom: 10px; /* Menor no mobile para economizar espaço */
  }
  
  .category-track {
    gap: 10px;
  }
  
  .category-card__image-wrapper {
    width: clamp(70px, 15vw, 90px);
    height: clamp(70px, 15vw, 90px);
    margin-bottom: 10px;
  }
  
  .category-card__title {
    font-size: clamp(13px, 3vw, 16px);
    line-height: 1.2;
    min-height: 2.4em;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding-top: 5px;
    max-width: clamp(70px, 15vw, 90px);
  }
  
  .category-card__subtitle {
    font-size: clamp(8px, 2vw, 10px);
    line-height: 1.1;
    min-height: 1.1em;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-width: clamp(70px, 15vw, 90px);
  }
}

@media screen and (min-width: 481px) and (max-width: 768px) {
  /* Remove o margin-left do primeiro card */
  .category-track .category-card:first-child {
    margin-left: 10px;
    /* Forçar centralização do conteúdo */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .section-header {
    margin-bottom: 15px; /* Moderado no tablet */
  }

  /* Aplicar em todos os cards para consistência */
  .category-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .category-track {
    gap: 15px;
  }
  
  .category-card__image-wrapper {
    width: clamp(85px, 13vw, 130px);
    height: clamp(85px, 13vw, 130px);
    margin-bottom: 11px;
  }
  
  .category-card__title {
    font-size: clamp(13px, 2.1vw, 15px);
    line-height: 1.2;
    min-height: 2.4em;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding-top: 7px;
    max-width: clamp(85px, 13vw, 130px);
  }
  
  .category-card__subtitle {
    font-size: clamp(11px, 1.9vw, 13px);
    line-height: 1.2;
    min-height: 1.2em;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-width: clamp(85px, 13vw, 130px);
  }
}

@media screen and (min-width: 769px) and (max-width: 1024px) {
  .category-container {
    padding: 7px 30px;
    align-items: center;
  }
}

@media screen and (min-width: 1025px) {
  .category-container {
    padding: 7px 40px;
  }
}

/* Estilização da scrollbar (webkit) */
.category-container::-webkit-scrollbar {
  height: 6px;
}

.category-container::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3px;
}

.category-container::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3px;
}

.category-container::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}

/* Para Firefox */
.category-container {
  scrollbar-width: thin;
  scrollbar-color: #c1c1c1 #f1f1f1;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const carousel = document.querySelector('[data-section-id="{{ section.id }}"]');
  if (!carousel) return;

  const container = carousel.querySelector('.category-container');
  const track = carousel.querySelector('.category-track');
  
  // Scroll suave com touch
  let isScrolling = false;
  let scrollTimeout;
  
  container.addEventListener('scroll', function() {
    isScrolling = true;
    
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(function() {
      isScrolling = false;
    }, 66);
  }, { passive: true });

  // Touch/swipe melhorado
  let startX = 0;
  let scrollLeft = 0;
  let isDown = false;

  container.addEventListener('mousedown', function(e) {
    isDown = true;
    container.style.cursor = 'grabbing';
    startX = e.pageX - container.offsetLeft;
    scrollLeft = container.scrollLeft;
  });

  container.addEventListener('mouseleave', function() {
    isDown = false;
    container.style.cursor = 'grab';
  });

  container.addEventListener('mouseup', function() {
    isDown = false;
    container.style.cursor = 'grab';
  });

  container.addEventListener('mousemove', function(e) {
    if (!isDown) return;
    e.preventDefault();
    const x = e.pageX - container.offsetLeft;
    const walk = (x - startX) * 2;
    container.scrollLeft = scrollLeft - walk;
  });

  // Adiciona cursor grab
  container.style.cursor = 'grab';
});
</script>

