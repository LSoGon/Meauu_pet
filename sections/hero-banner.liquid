{{ 'component-hero-carousel.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-carousel.js' | asset_url }}" defer></script>

<section class="hero-carousel" data-section-id="{{ section.id }}" data-height="{{ section.settings.height }}">
  <div class="hero-carousel__wrapper" data-autoplay="{{ section.settings.autoplay }}" data-autoplay-speed="{{ section.settings.autoplay_speed }}">
    <div class="hero-carousel__track" data-carousel-track>
      {% for block in section.blocks %}
        <div class="hero-carousel__slide {% if forloop.first %}hero-carousel__slide--active{% endif %}" 
             data-slide-index="{{ forloop.index0 }}"
             {{ block.shopify_attributes }}>
          
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="hero-carousel__link">
          {% endif %}
          
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '1920x' }}"
                 alt="{{ block.settings.image.alt | default: 'Banner ' | append: forloop.index }}"
                 class="hero-carousel__image"
                 loading="{% if forloop.first %}eager{% else %}lazy{% endif %}">
          {% else %}
            <div class="hero-carousel__placeholder">
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
          
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
          
        </div>
      {% endfor %}
    </div>
    
    {% if section.blocks.size > 1 %}
      <button class="hero-carousel__nav hero-carousel__nav--prev" aria-label="Slide anterior" data-carousel-prev>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <button class="hero-carousel__nav hero-carousel__nav--next" aria-label="Próximo slide" data-carousel-next>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <div class="hero-carousel__dots" data-carousel-dots>
        {% for block in section.blocks %}
          <button class="hero-carousel__dot {% if forloop.first %}hero-carousel__dot--active{% endif %}" 
                  aria-label="Ir para slide {{ forloop.index }}"
                  data-dot-index="{{ forloop.index0 }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Banner Hero Carrossel",
  "tag": "section",
  "class": "section-hero-carousel",
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Reprodução automática",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Velocidade da reprodução automática",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "default": 5
    },
    {
      "type": "select",
      "id": "height",
      "label": "Altura do banner",
      "options": [
        {
          "value": "small",
          "label": "Pequeno"
        },
        {
          "value": "medium",
          "label": "Médio"
        },
        {
          "value": "large",
          "label": "Grande"
        },
        {
          "value": "fullscreen",
          "label": "Tela cheia"
        }
      ],
      "default": "large"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem do banner"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link do banner",
          "info": "Deixe vazio se não quiser que o banner seja clicável"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Hero Carrossel",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}