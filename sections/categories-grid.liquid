{% comment %}
  Seção de Categorias em Grid - Sem Carrossel
  Exibe as categorias em um grid responsivo estático
{% endcomment %}

<section class="categories-grid" id="categories-grid-{{ section.id }}">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    
    <div class="categories-container">
      {% for block in section.blocks %}
        <div class="category-card">
          <a href="{{ block.settings.link }}" class="category-card__link">
            {% if block.settings.image %}
              <div class="category-card__image">
                <img src="{{ block.settings.image | img_url: '150x150' }}"
                     alt="{{ block.settings.title }}"
                     loading="lazy"
                     width="200"
                     height="200">
              </div>
            {% endif %}
            <h3 class="category-card__title">{{ block.settings.title }}</h3>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .categories-grid {
    padding: 40px 0;
    background-color: white;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    font-size: 28px;
    margin: 0 0 10px 0;
    color: #333;
    text-align: center;
  }

  /* Container principal - Grid responsivo */
  .categories-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 25px;
    justify-items: center;
    padding: 10px 0;
  }

  /* Cards de Categoria - Mesmo estilo do carrossel */
  .category-card {
    width: 150px;
    text-align: center;
  }

  .category-card__link {
    display: block;
    text-decoration: none;
    color: #333;
    transition: transform 0.3s ease;
  }

  .category-card__link:hover {
    transform: translateY(-8px);
  }

  .category-card__image {
    background-color: #f0f0f0;
    padding: 20px;
    margin-bottom: 12px;
    border-radius: 50%;
    border: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: box-shadow 0.3s ease;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .category-card__link:hover .category-card__image {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .category-card__image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .category-card__title {
    font-size: 16px;
    font-weight: 500;
    margin: 0;
    line-height: 1.4;
  }

  /* Versões alternativas do grid */
  
  /* OPÇÃO 1: Grid com número fixo de colunas */
  .categories-container--fixed {
    display: grid;
    grid-template-columns: repeat(5, 1fr); /* Sempre 5 colunas */
    gap: 25px;
    justify-items: center;
  }

  /* OPÇÃO 2: Grid com flex (alternativa) */
  .categories-container--flex {
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    justify-content: center;
  }

  /* OPÇÃO 3: Grid com espaçamento específico */
  .categories-container--spaced {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    justify-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .categories-container {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 20px;
    }

    .category-card {
      width: 140px;
    }

    .category-card__image {
      height: 140px;
      padding: 15px;
    }

    .category-card__title {
      font-size: 14px;
    }

    .category-card__link:hover {
      transform: translateY(-5px);
    }
  }

  @media (max-width: 480px) {
    .categories-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .category-card {
      width: 100%;
      max-width: 140px;
    }
  }

  /* Para telas muito grandes */
  @media (min-width: 1400px) {
    .categories-container {
      max-width: 1400px;
      margin: 0 auto;
    }
  }
</style>

